<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="robot" default="RR04" />
  <arg name="cam" default="l515" />
  <arg name="bag" />
  <arg name="args" default="" />

  <node pkg="rosbag" type="play" name="player" output="screen" args="--clock $(arg bag) $(arg args)"/>

  <group ns="$(arg robot)" >
    <group ns="$(arg cam)" >
        <node pkg="image_transport" type="republish" name="rgb_uncompress" args="compressed in:=color/image_raw raw out:=color/image_raw" output="screen"/>
        <node pkg="image_transport" type="republish" name="depth_uncompress" args="compressedDepth in:=aligned_depth_to_color/image_raw raw out:=aligned_depth_to_color/image_raw" output="screen"/>
    </group>
  </group>

</launch>